<!DOCTYPE html>
<html lang="en">
    <head>

        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Banking System</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.4/css/fontawesome.min.css" integrity="sha384-jLKHWM3JRmfMU0A5x5AkjWkw/EYfGUAGagvnfryNV3F9VqM98XiIH7VBGVoxVSc7" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    
        
        <!-- Favicon -->
        <link rel="icon" type="image/x-icon" href="icon.jpg">
        <style>
         body{
    		 background-color: #026AC6;
         max-width: 100%;
        overflow-y: hidden;
        overflow-x: hidden;
       }
      .menu-bar{
        background-image: linear-gradient(-90deg, #1252d3, #a83279);
        max-width: 100%;
      }

      .nav-link{
        font-size: 20px;
        margin: 5px;
        color: white!important;
        font-weight: 500;
      }

      .navbar-nav{
        text-align: right;
        margin-right: 20px;
      }

      .menu-bar .navbar-toggler{
        padding-right: 20px;
        outline: none!important;
        border: none!important;
      }

      .navbar .fa{
        color: #ffff;
        font-size: 26px;

      }

      .nav-link:hover{
        font-weight: 600;
        border-bottom: 1px solid white;
      }
     
      img {
 			 border-radius: 8px;
 			 box-shadow: 0 4px 8px 0 white, 0 6px 20px 0 white;
		  } 

      .favicon{
        border-radius: 50px;
        box-shadow: 0 4px 8px 0 rgb(228, 9, 9), 0 6px 20px 0 rgb(233, 8, 8)!important;
      }

      .drop{
        margin-left: 450px;
        margin-top: 100px;
      }
      #grad1 {
      height: 640px;
      background-color: #026AC6; /* For browsers that do not support gradients */
      background-image: linear-gradient(#3F8FD5 ,#026AC6, #02213D);
    }
      .custombtn{
        display: block;
      }

      .container{
        background-color: #02213D;
        height: 55vh;
        width: 75vh;
        margin-top: 85px;
        box-sizing: border-box;
        border: 1px solid #02213D;
        border-radius: 31px;
        box-shadow: 0 4px 8px 0 rgb(23, 214, 16), 0 6px 20px 0 white;
      }
      .form-select{
        margin-top: 95px;
      }

      .btn-primary{
        width: 160px;
        margin-left: -53px;
        border-radius: 10px;
        background-color: rgb(21, 161, 16);
        font-weight: bold;
      }
      .input-group{
        margin-left: 35px;
      }
    </style>
</head>

<body id="grad1">
    
      <div class="header">
        <div class="menu-bar">
          <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
              <a class="navbar-brand" href="/"><img class="favicon" src="navbaricon.png" alt="Icon" width="50" height="50"></a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars "></i>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/transfer">Transfer</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/transactions">All Transactions</a>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
        </div>
      </div>


      &nbsp;&nbsp;&nbsp;&nbsp;
      &nbsp;&nbsp;&nbsp;&nbsp;
      
      <div class="container">
        <form class="paymentform" action="/transfer" method="post">
          
          <div class="d-flex flex-row bd-highlight mb-3">
            <select class="form-select" aria-label="Default select example" id="Sender" name="Sender">
              <option selected>Select Customer 1</option>
              <% if (customers.length > 0) { %>
                <% customers.forEach(customer => { %>
                <option value="<%= customer.Name %>"><%= customer.Name %></option>
                <% }) %>
              <% } %>
            </select>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <select class="form-select" id="Reciever" name="Reciever">
              <option selected>Select Customer 2</option>
              <% if (customers.length > 0) { %>
                <% customers.forEach(customer => { %>
                <option value="<%= customer.Name %>"><%= customer.Name %></option>
                <% }) %>
              <% } %>
            </select>
            
          </div>
  
          <div class="mx-auto px-5 px-5" style="width: 400px;">
            <div class="d-inline-flex align-items-center justify-content-center">
              <div class="input-group mb-3 input-group-sm">
                <div class="input-group-prepend">
                  <span class="input-group-text">Amount</span>
                </div>
              <input type="text" class="form-control" id="Amount" name="Amount">
              </div>
  
            </div>
          </div>
            
          
          <div class="buttons row d-flex justify-content-center">
            <div class="col-md-2">
              <button type="submit" class="btn btn-primary">Send Money</button>
            </div>
          </div>
      </form>

</body> 
</html>